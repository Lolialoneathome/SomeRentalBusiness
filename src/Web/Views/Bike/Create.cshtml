@model WebApp.ViewModels.BikeViewModel

@{
}
<div>
    @using (Html.BeginForm())
    {
        <div class="form-horizontal">
            <h4>Добавление нового велосипеда на точку по адресу @Model.RentPointAdress</h4>
            <hr />

            <div>
                @Html.EditorFor(model => Model.RentPointAdress, new { htmlAttributes = new { @class = "hidden" } })
            </div>

            <div class="form-group">

                <div class="control-label col-md-2"> Имя </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => Model.Name, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="control-label col-md-2"> Стоимость </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => Model.Cost, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                                <div class="control-label col-md-2"> Стоимость часа </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => Model.HourCost, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>

        </div>
    }
</div>