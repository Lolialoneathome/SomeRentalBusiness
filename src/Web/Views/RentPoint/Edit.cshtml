@model WebApp.ViewModels.RentPointViewModel

@{
}
<div>
    @using (Html.BeginForm())
    {
            <h4>Редактирование точки (Тут можно только байки добавить :) )</h4>
            <hr />
                <div class="control-label col-md-2"> Имя точки </div>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="control-label col-md-2"> Адрес точки </div>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Adress, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="control-label col-md-2"> Денег в кассе </div>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Money, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <p>Данные работника</p>

                <div class="control-label col-md-2"> Имя работника </div>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.EmployeeName, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="control-label col-md-2"> Фамилия работника </div>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.EmployeeSurname, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="control-label col-md-2"> Отество работника </div>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.EmployeePatronymic, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            <table>
                <tr>
                    <th> Имя </th>
                    <th> Стоимость </th>
                    <th> Стоимость часа</th>
                </tr>
                @foreach (var item in Model.Bikes)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cost)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HourCost)
                        </td>
                    </tr>
                }
            </table>

            <div>
                @Html.ActionLink("Добавить велосипед", "Create", "Bike", new { adress = Model.Adress });
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Сохранить" class="btn btn-default" />
                </div>
            </div>
    }
</div>