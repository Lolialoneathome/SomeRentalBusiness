@model IEnumerable<Domain.Entities.RentPoint>
@{
    Layout = "_Layout";

    <table>
        <tr>
            <th> Имя точки </th>
            <th> Адрес </th>
            <th> Закрепленный работник </th>
            <th> Денег в кассе </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CashBox.Money)
                </td>
                <td>
                    @Html.ActionLink("Редактировать", "Edit", new { adress = item.Adress })
                </td>
                <td>
                    @Html.ActionLink("Удалить", "Delete", item)
                </td>
            </tr>
        }
    </table>

    <div>
        @Html.ActionLink("Создать точку", "Create");
    </div>

}

